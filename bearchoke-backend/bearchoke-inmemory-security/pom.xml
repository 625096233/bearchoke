    <groupId>com.bearchoke</groupId>
    <artifactId>bearchoke-inmemory-security</artifactId>
    <packaging>jar</packaging>
    <version>0.0.1-SNAPSHOT</version>
    <name>Bearchoke In-Memory Security (JAR)</name>

