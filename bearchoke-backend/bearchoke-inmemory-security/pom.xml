        <dependency>
            <groupId>com.bearchoke</groupId>
            <artifactId>bearchoke-platform-base</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.bearchoke</groupId>
            <artifactId>bearchoke-api</artifactId>
            <version>${project.version}</version>
        </dependency>

